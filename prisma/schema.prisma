generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Enquiry {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String?
  company     String?
  designation String?
  email       String
  phone       String?
  city        String?
  state       String?
  country     String?
  website     String?
  industry    String?
  products    String?
  source      String?
  message     String
  consent     Boolean  @default(true)
  createdAt   DateTime @default(now())
}
